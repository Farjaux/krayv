extends base

block content 
    head 
        script(defer src='/js/restaurantScript.js')
    section.restaurant 
        .restaurant__main(style=`background-image: url(../img/${restaurant.coverImage});`) &nbsp;
        .restaurant__description
            .restaurant__description--info
                h3= restaurant.name 
                p 1258 krayvs 
                p= restaurant.cuisine
            .restaurant__description--fav
                button.btn__fav.nb 
                    svg.btn__fav--icon 
                        use(href='../img/icons.svg#icon-star-empty')
                    p Add to
                    p Favorites
        .restaurant__info   
            .restaurant__info--location
                svg 
                    use(href='../img/icons.svg#icon-location')
                a.nb(href='#')
                    h4= restaurant.location.address
            .restaurant__info--phone
                svg 
                    use(href='../img/icons.svg#icon-mobile')
                a.nb(href='tel:3179790634')
                    h4= restaurant.phoneNumber
            .restaurant__info--website
                svg 
                    use(href='../img/icons.svg#icon-sphere')
                a.nb(href= restaurant.website target="_blank" rel="noopener noreferrer")
                    h4= restaurant.website 
            .restaurant__info--delivery
                svg 
                    use(href='../img/icons.svg#icon-rocket')
                a.nb(href= restaurant.delivery.ubereats)
                    h4 Uber Eats
                a.nb(href= restaurant.delivery.doordash)
                    h4 DoorDash
                a.nb(href= restaurant.delivery.grubhub)
                    h4 GrubHub
                a.nb(href= restaurant.delivery.postmates)
                    h4 PostMates
        .restaurant__hours
            svg 
                use(href='../img/icons.svg#icon-clock2')
            h4 Hours 
            button.restaurant__hours--btn.nb
                svg 
                    use(href='../img/icons.svg#icon-circle-down')
            div.restaurant__hours--time
                ul 
                    .restaurant__hours--time-1
                        li Monday: 12am - 12pm
                        li Tuesday: 12am - 12pm
                        li Wednesday: 12am - 12pm
                        li Thursday: 12am - 12pm
                    .restaurant__hours--time-2
                        li Friday: 12am - 12pm
                        li Saturday: 12am - 12pm
                        li Sunday: 12am - 12pm
        .restaurant__images
            .restaurant__images--layout
                h4 Breakfast 
                button.btn--breakfast.nb
                    svg 
                        use(href='../img/icons.svg#icon-circle-down')
                .images 
                    .breakfast 
                        img.group1(src='../img/food-image-1.png' alt='Plate 1')
                        img.group1(src='../img/food-image-1.png' alt='Plate 1')
                        img.group1(src='../img/food-image-1.png' alt='Plate 1')
                        img.group2(src='../img/food-image-1.png' alt='Plate 1')
